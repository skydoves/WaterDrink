<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="15dp">

    <ImageView
        android:id="@+id/item_alarmrecord_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_alarm" />

    <TextView
        android:id="@+id/item_alarmrecord_tv_days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="@+id/item_alarmrecord_img"
        android:layout_marginLeft="15dp"
        android:layout_toEndOf="@+id/item_alarmrecord_img"
        android:text="Monday Tuesday Wednesday Thursday Friday Saturday Sunday"
        android:textColor="#3d95c9"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/item_alarmrecord_tv_times"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/item_alarmrecord_tv_days"
        android:layout_alignBottom="@+id/item_alarmrecord_img"
        android:text="Start: 7:00 / End: 6:00"
        android:textColor="#ffffff"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/item_alarmrecord_tv_interval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_alarmrecord_tv_times"
        android:layout_alignStart="@+id/item_alarmrecord_tv_times"
        android:text="Start: 7:00 / End: 6:00"
        android:textColor="#ffffff"
        android:textSize="15sp" />

    <ImageButton
        android:id="@+id/item_alarmrecord_btn_delete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:background="@android:color/transparent"
        android:padding="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_close"
        android:tint="#3b3f50" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/item_alarmrecord_tv_interval"
        android:layout_marginTop="15dp"
        android:background="#2e3241" />

</RelativeLayout>
