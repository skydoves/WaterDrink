<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#1d1f2f"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- # Main Layout # -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <!-- Layout Content0 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/makealram_tv01"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="23dp"
                android:text="요일 선택"
                android:scrollbars="vertical"
                android:textColor="#3d95c9"
                android:textStyle="bold"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_below="@+id/makealram_tv01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="7">

                    <TextView
                        android:id="@+id/makealarm_tv_day0"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="#30354b"
                        android:text="일"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:textColor="#ffffff"
                        android:textSize="17dp"
                        android:padding="12dp"/>

                    <TextView
                        android:id="@+id/makealarm_tv_day1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="#30354b"
                        android:text="월"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:textColor="#ffffff"
                        android:textSize="17dp"
                        android:padding="12dp"/>

                    <TextView
                        android:id="@+id/makealarm_tv_day2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="#30354b"
                        android:text="화"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:textColor="#ffffff"
                        android:textSize="17dp"
                        android:padding="12dp"/>

                    <TextView
                        android:id="@+id/makealarm_tv_day3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="#30354b"
                        android:text="수"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:textColor="#ffffff"
                        android:textSize="17dp"
                        android:padding="12dp"/>

                    <TextView
                        android:id="@+id/makealarm_tv_day4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="#30354b"
                        android:text="목"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:textColor="#ffffff"
                        android:textSize="17dp"
                        android:padding="12dp"/>

                    <TextView
                        android:id="@+id/makealarm_tv_day5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="#30354b"
                        android:text="금"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:textColor="#ffffff"
                        android:textSize="17dp"
                        android:padding="12dp"/>

                    <TextView
                        android:id="@+id/makealarm_tv_day6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="#30354b"
                        android:text="토"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:textColor="#ffffff"
                        android:textSize="17dp"
                        android:padding="12dp"/>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>


        <!-- Layout Content1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.2"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/makealram_tv02"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="23dp"
                    android:text="시간 간격 설정"
                    android:scrollbars="vertical"
                    android:textColor="#3d95c9"
                    android:textStyle="bold"
                    android:textSize="15sp" />

                <ImageButton
                    android:id="@+id/makealram_ibtn_q_timeset01"
                    android:layout_width="26dp"
                    android:layout_height="18dp"
                    android:scaleType="fitEnd"
                    android:src="@drawable/ic_question"
                    android:background="@android:color/transparent"
                    android:layout_alignParentEnd="true"
                    android:tint="#3d95c9"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/makealarm_label_starttime"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:clickable="true"
                android:background="@drawable/bg_round_rect_r"
                android:layout_below="@+id/makealram_tv02"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/makealram_content1_tv0"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="알림 시작 시간"
                    android:textColor="#ffffff"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:textStyle="bold"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/makealram_content1_tv_starttime"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="시간 미정"
                    android:textColor="#ffffff"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="20dp"
                    android:textSize="15sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/makealarm_label_endtime"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:clickable="true"
                android:background="@drawable/bg_round_rect_r"
                android:layout_below="@+id/makealram_tv02"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/makealram_content1_tv1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="알림 종료 시간"
                    android:textColor="#ffffff"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:textStyle="bold"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/makealram_content1_tv_endtime"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="시간 미정"
                    android:textColor="#ffffff"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="20dp"
                    android:textSize="15sp" />

            </RelativeLayout>

        </LinearLayout>


        <!-- Layout Content2 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/makealram_tv04"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="23dp"
                android:text="알림 간격"
                android:scrollbars="vertical"
                android:textColor="#3d95c9"
                android:textStyle="bold"
                android:textSize="15sp" />

            <ImageButton
                android:id="@+id/makealram_ibtn_q_timeset02"
                android:layout_width="26dp"
                android:layout_height="18dp"
                android:scaleType="fitEnd"
                android:src="@drawable/ic_question"
                android:background="@android:color/transparent"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="20dp"
                android:tint="#3d95c9"/>

            <com.skydoves.waterdays.ui.customViews.NumberPicker
                android:id="@+id/makealram_np_interval"
                android:layout_below="@+id/makealram_tv04"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/makealram_tv05"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:paddingTop="13dp"
                android:text="시간"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/makealram_np_interval"
                android:textColor="#3d95c9"
                android:textStyle="bold"
                android:textSize="18sp" />

        </RelativeLayout>


        <!-- Layout Content3 -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="30dp">

            <Button
                android:id="@+id/makealram_btn_setalarm"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="알림 추가하기"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="64dp"
                android:layout_marginRight="64dp"
                android:textColor="#ffffff"
                android:background="#3d95c9"/>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
